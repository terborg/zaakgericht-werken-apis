{
    "name": "Docusaurus Dev Container",
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
    "forwardPorts": [3000],
    "postCreateCommand": "npm install",
    "customizations": {
      "vscode": {
        "extensions": [
          "esbenp.prettier-vscode",
          "yzhang.markdown-all-in-one",
          "redhat.vscode-yaml"
        ]
      }
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    }
  }